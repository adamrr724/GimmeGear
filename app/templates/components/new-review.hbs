<div class="reviewForm">
  <h3>Add a review for this product</h3>
  <form>
    <div class="form-group">
      <label for="username">Username: </label>
      {{input value=username}}
    </div>
    <div class="form-group">
      <label for="rating">Rating: </label>
      {{#x-select value=rating}}
      {{#x-option value="1 star"}}1 Star{{/x-option}}
      {{#x-option value="2 stars"}}2 Stars{{/x-option}}
      {{#x-option value="3 stars"}}3 Stars{{/x-option}}
      {{#x-option value="4 stars"}}4 Stars{{/x-option}}
      {{#x-option value="5 stars"}}5 Stars{{/x-option}}
      {{/x-select}}
    </div>
    <div class="form-group">
      <label for="content">Review: </label>
      {{input value=content class='reviewContent'}}
    </div>
    <button {{action 'saveReview'}}>Post Review</button>
  </form>
</div>

